	print(a+b)

def soma(a,b):
	return(a + b)

def espar(x):
	return(x%2==0)

def espar(x):
	return(x%2==0)


def par_ou_impar(x):
	if espar(x)==True):
	       return “par”
    else:
	       return “ímpar”

def pesquise(lista,valor):
    for x,e in enumerate(lista):
        if e == valor:                                    
            return x
    return None

